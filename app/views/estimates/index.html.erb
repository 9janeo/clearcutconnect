<% current_user = @user %>
<h1>Build your estimate</h1>
<p>Get a quote for just services you need</p>

<h2>Your Estimates</h2>
<div class="form-group">
	<%= form_for(@estimate) do |f| %>
		<%= f.label :owner %>
		<%= f.text_field :owner %><br />
		<%= f.label :email %>
		<%= f.text_field :email %><br />
		<%= f.label :phone %>
		<%= f.text_field :phone %><br />
		<%= f.label :notes %>
		<%= f.text_field :notes %><br />
		<%= f.label :types %>
		<%= f.check_box :type, {multiple: true}, 1, nil %><br />
		<%= f.submit %>
	<% end %>
</div>



<% #if @user.estimates.blank? %>
	<!--<p>You have not received any estimates yet</p>-->
<%# else %>
	<h2>Projects</h2>

	<%= @estimates.each do |e|
		e.text_field :owner
		e.text_field :email
		e.text_field :phone
		e.text_field :notes
	end %>
<%# end %>