      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :word %>
    <%= form.text_field :word, id: :keyword_word %>
  </div>

  <div class="form-group">
    <%= image_tag(@keyword.image_url, width: "100") if @keyword.image? %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
